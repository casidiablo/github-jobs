<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dip">

    <TextView
            android:id="@+id/lbl_template_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hint_template_name"/>

    <com.github.jobs.widget.JellyBeanSpanFixTextView
            android:id="@+id/lbl_template_preview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="3dip"
            android:text="@string/template_preview"
            android:background="@drawable/preview_bg"/>

</LinearLayout>