<?xml version="1.0" encoding="utf-8"?>
<ViewSwitcher
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/switcher_edit_mode"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dip">

        <EditText
                android:id="@+id/edit_template_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textCapWords"
                android:hint="@string/hint_template_name"/>

        <EditText
                android:id="@+id/edit_template_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="left|top"
                android:inputType="text|textCapSentences|textMultiLine"
                android:typeface="monospace"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:hint="@string/hint_template_content"/>
    </LinearLayout>

    <WebView
            android:id="@+id/lbl_template_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="3dip"
            android:text="@string/template_preview"
            android:background="@drawable/preview_bg"/>

</ViewSwitcher>