<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="Theme.GithubJobs" parent="android:Theme.Holo.Light.DarkActionBar">
    <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
    <item name="android:editTextStyle">@style/EditTextTheme.GithubJobs</item>
    <item name="android:checkboxStyle">@style/CheckBoxTheme.GithubJobs</item>
    <item name="android:buttonStyle">@style/ButtonTheme.GithubJobs</item>
    <item name="android:imageButtonStyle">@style/ImageButtonTheme.GithubJobs</item>
  </style>

  <style name="Theme.GithubJobs.Dialog" parent="android:Theme.Dialog">
    <item name="android:editTextStyle">@style/EditTextTheme.GithubJobs</item>
    <item name="android:checkboxStyle">@style/CheckBoxTheme.GithubJobs</item>
    <item name="android:buttonStyle">@style/ButtonTheme.GithubJobs</item>
    <item name="android:imageButtonStyle">@style/ImageButtonTheme.GithubJobs</item>
  </style>

  <style name="Theme.GithubJobs.Dialog.NoTitle" parent="Theme.GithubJobs.Dialog">
    <item name="android:windowNoTitle">true</item>
  </style>

  <style name="Widget.Styled.ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@drawable/header_back</item>
  </style>

  <style name="EditTextTheme.GithubJobs" parent="android:Widget.EditText">
    <item name="android:background">@drawable/edit_text_holo_light</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="CheckBoxTheme.GithubJobs" parent="android:Widget.CompoundButton.CheckBox">
    <item name="android:button">@drawable/btn_check_holo_light</item>
  </style>

  <style name="ButtonTheme.GithubJobs" parent="android:Widget.Button">
    <item name="android:background">@drawable/btn_default_holo_light</item>
    <item name="android:minHeight">48dip</item>
    <item name="android:minWidth">64dip</item>
    <item name="android:textColor">#ffffff</item>
  </style>

  <style name="ImageButtonTheme.GithubJobs" parent="android:Widget.ImageButton">
    <item name="android:background">@drawable/btn_default_holo_light</item>
  </style>

  <style name="PromoButton">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:background">@null</item>
  </style>

  <style name="LibraryCheckbox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:checked">true</item>
    <item name="android:drawableLeft">@drawable/btn_check_on_holo_light</item>
    <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
  </style>
</resources>